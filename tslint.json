{
    "defaultSeverity": "warning",
    "rules":
    {
        "adjacent-overload-signatures":    true,
        "align":                           
        [
            true,
            "arguments",
            "elements",
            "members",
            "parameters",
            "statements"
        ],
        "await-promise":                   true,        
        "binary-expression-operand-order": true,
        "class-name":                      true,
        "completed-docs":
        [
            false, // For now
            {
                "classes":    {"visibilities": ["exported"]},
                "enums":      {"visibilities": ["exported"]},
                "functions":  {"visibilities": ["exported"]},
                "interfaces": {"visibilities": ["exported"]},
                "namespaces": {"visibilities": ["exported"]},
                "types":      {"visibilities": ["exported"]},
                "variables":  {"visibilities": ["exported"]},
                "methods":    {"locations": ["all"], "privacies": ["public", "protected"]},
                "properties": {"locations": ["all"], "privacies": ["public", "protected"]}
            }
        ],
        "curly":                     true,
        "cyclomatic-complexity":     true,
        "deprecation":               true,
        "encoding":                  true,
        "indent":                    true,
        "interface-name":            true,
        "label-position":            true,
        "match-default-export-name": true,
        "member-access":
        [
            true,
            "check-accessor",
            "check-constructor"
        ],
        "member-ordering":
        [
            true,
            {
                "order":
                [
                    "private-static-field",
                    "protected-static-field",
                    "public-static-field",
                    "private-instance-field",
                    "protected-instance-field",
                    "public-instance-field",
                    "private-constructor",
                    "protected-constructor",
                    "public-constructor",
                    "private-static-method",
                    "protected-static-method",
                    "public-static-method",
                    "private-instance-method",
                    "protected-instance-method",
                    "public-instance-method"
                ]
            }
        ],        
        "new-parens":                      true,
        "no-angle-bracket-type-assertion": true,
        "no-any":                          true,
        "no-arg":                          true,
        "no-duplicate-imports":            true,
        "no-duplicate-super":              true,
        "no-magic-numbers":                true,
        "no-mergeable-namespace":          true,
        "no-non-null-assertion":           true,
        "no-reference":                    true,
        "no-var-keyword":                  true,
        "no-trailing-whitespace":          true,
        "one-variable-per-declaration":    true,
        "prefer-for-of":                   true,
        "promise-function-async":          true,
        "quotemark":                       [true, "double"],
        "restrict-plus-operands":          true,
        "semicolon":                       true,
        "switch-default":                  true,
        "typeof-compare":                  true,
        "use-isnan":                       true,
        "variable-name":                   
        [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "whitespace": true        
    }
}