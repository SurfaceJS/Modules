{
    "author": "HitalloExiled",
    "description": "Global modules and shared types",
    "devDependencies": {
        "@types/chai": "4.1.7",
        "@types/mocha": "5.2.5",
        "@types/node": "10.12.11",
        "mocha": "5.2.0",
        "nyc": "13.1.0"
    },
    "keywords": [
        "types",
        "tests",
        "shared"
    ],
    "license": "MIT",
    "name": "modules",
    "scripts": {
        "task:build": "node ./tasks/cli build",
        "task:clean": "node ./tasks/cli clean",
        "task:install": "node ./tasks/cli install",
        "task:link": "node ./tasks/cli link",
        "task:publish": "node ./tasks/cli publish",
        "task:relink": "node ./tasks/cli relink",
        "task:setup": "npm i && tsc -p ./tasks && node ./tasks/cli setup",
        "task:unlink": "node ./tasks/cli unlink",
        "test:build": "tsc -p tsconfig.test.json",
        "test:cover": "nyc mocha --ui tdd source/@surface/*/tests/**/*.spec.js",
        "test:run": "mocha --ui tdd source/@surface/*/tests/*.spec.js",
        "test:watch": "tsc -p tsconfig.test.json -w"
    },
    "version": "1.0.0"
}
