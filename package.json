{
    "author": "HitalloExiled",
    "description": "Global modules and shared types",
    "devDependencies": {
        "@types/chai": "4.2.13",
        "@types/jsdom": "16.2.4",
        "@types/node": "14.11.8",
        "@typescript-eslint/eslint-plugin": "4.4.0",
        "@typescript-eslint/parser": "4.4.0",
        "chai": "4.2.0",
        "chalk": "4.1.0",
        "commander": "6.1.0",
        "eslint": "7.11.0",
        "eslint-plugin-import": "2.22.1",
        "jsdom": "16.4.0",
        "mocha": "8.1.3",
        "nyc": "15.1.0",
        "tslib": "2.0.3",
        "typescript": "4.0.3"
    },
    "keywords": [
        "types",
        "tests",
        "shared"
    ],
    "license": "MIT",
    "name": "modules-tasks",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SurfaceJS/modules.git"
    },
    "scripts": {
        "build": "tsc -p ./tasks/tsconfig.no-tests.json",
        "cover": "nyc --check-coverage mocha --ui tdd **/source/@surface/*/tests/**/*.spec.js",
        "lint": "eslint . --ext .ts",
        "postinstall": "cd ./tasks && npm i && cd ..",
        "task:build": "node ./tasks/cli build",
        "task:clean": "node ./tasks/cli clean",
        "task:install": "node ./tasks/cli install",
        "task:link": "node ./tasks/cli link",
        "task:publish": "node ./tasks/cli publish",
        "task:relink": "node ./tasks/cli relink",
        "task:setup": "node ./tasks/cli setup",
        "task:sync": "node ./tasks/cli setup",
        "task:unlink": "node ./tasks/cli unlink",
        "test": "mocha --ui tdd **/source/@surface/*/tests/**/*.spec.js"
    },
    "version": "1.0.0"
}
