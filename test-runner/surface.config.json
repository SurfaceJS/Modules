{
    "context":  "source",
    "entry":    ".",
    "filename": "[name].js",
    "output":   "build",
    "tsconfig": "tsconfig.json",
    "tslint":   "../tslint.json",
    "simblingResolve":
    {
        "from":    ".js",
        "to":      ".ts",
        "include": ["node_modules/@surface", "../source/@surface"]
    },
    "webpackConfig":
    {
        "output":
        {
            "devtoolModuleFilenameTemplate": "[absolute-resource-path]"
        },
        "externals":
        {
            "chai":            "commonjs chai",
            "jsdom":           "commonjs jsdom",
            "tslib":           "commonjs tslib",
            "webcomponentsjs": "commonjs webcomponentsjs"
        },
        "target": "node",
        "node": { "__dirname": false }
    }
}