{
    "context":  "source",
    "entry":    ".",
    "filename": "[name].js",
    "output":   "build",
    "tsconfig": "tsconfig.json",
    "tslint":   "../tslint.json",
    "webpackConfig":
    {
        "output":
        {
            "devtoolModuleFilenameTemplate": "[absolute-resource-path]"
        },
        "externals":
        {
            "chai": "commonjs chai",
            "tslib": "commonjs tslib"
        },
        "target": "node",
        "node": { "__dirname": false }
    }
}