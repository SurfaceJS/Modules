{
    "inputs": [
        {
            "default": "",
            "description": "Timestamp used by nightly build",
            "id": "timestamp",
            "type": "promptString"
        }
    ],
    "tasks": [
        {
            "command": "node cli clean; node cli build;",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "isBackground": true,
            "label": "Compile Modules",
            "options": {
                "cwd": "${workspaceFolder}/tasks/"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "${workspaceFolder}/node_modules/.bin/tsc.ps1",
            "label": "TS Compile File",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "npm run cover",
            "isBackground": true,
            "label": "Cover Modules",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "node ${workspaceFolder}/tasks/cli cover ${file}",
            "isBackground": true,
            "label": "Cover File",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [
                "$tsc"
            ],
            "type": "shell"
        },
        {
            "command": "npm run task:publish -- https://registry.npmjs.org --token=${env:NPM_AUTH_TOKEN} --config=nightly --timestamp=${input:timestamp} --debug",
            "isBackground": true,
            "label": "Publish - Nightly",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "npm run task:publish -- https://registry.npmjs.org --token=${env:NPM_AUTH_TOKEN} --config=release --debug",
            "isBackground": true,
            "label": "Publish - Release",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "command": "${workspaceFolder}/node_modules/.bin/mocha.cmd --loader=@surface/mock-loader --ui=tdd ${fileDirname}/${fileBasenameNoExtension}.js",
            "isBackground": true,
            "label": "Test File",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ]
            },
            "type": "shell"
        },
        {
            "command": "npm run test",
            "isBackground": true,
            "label": "Test Modules",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "type": "shell"
        }
    ],
    "version": "2.0.0"
}